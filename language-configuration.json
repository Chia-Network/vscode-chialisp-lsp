{
  "brackets": [[ "(", ")" ]],
  "autoClosingPairs": [
    { "open": "(", "close": ")", "notIn": ["string", "comment"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
  ],
  "comments": {
    "lineComment": ";"
  },
  "autoCloseBefore": ";:.,=)` \n\t",
  "surroundingPairs": [ ["(", ")"], ["\"", "\""], ["'", "'"] ]
}
